{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "default": {
        "layout": {
            "rows": []
        }
    },
    "required": [
        "layout"
    ],
    "definitions": {
        "data_table": {
            "$id": "#/definitions/data_table",
            "type": "object",
            "title": "Data_table",
            "description": "Data_Table",
            "default": {
                "type": "data_table",
                "id": "",
                "text": "",
                "file_path": "<path>",
                "encoding": "utf-8",
                "usecols": [],
                "index_col": "",
                "page_size": 10,
                "style_as_list_view": "False",
                "style_inner": {}
            },
            "required": [
                "file_path"
            ],
            "properties": {
                "type": {
                    "$ref": "#/definitions/type"
                },
                "id": {
                    "$ref": "#/definitions/id"
                },
                "text": {
                    "type": "string",
                    "default": "",
                    "description": "Texto que aparece acima da tabela."
                },
                "file_path": {
                    "type": "string",
                    "description": "Caminho do arquivo (csv)."
                },
                "encoding": {
                    "type": "string",
                    "default": "utf-8",
                    "description": "Encoding utilizado para ler 'file_path'."
                },
                "usecols": {
                    "type": "array",
                    "default": [],
                    "description": "Lista de nomes de colunas a serem lidas.",
                    "items": {
                        "type": "string"
                    }
                },
                "index_col": {
                    "type": "string",
                    "description": "Nome da coluna que deve ser adotada como index."
                },
                "page_size": {
                    "type": "integer",
                    "default": 10,
                    "description": "Número de linhas com dado em cada página."
                },
                "style_as_list_view": {
                    "$comment": "O tipo deveria ser booleano, mas a analise no código python parece funcionar de forma diferente. Verificar",
                    "type": "string",
                    "default": "False",
                    "description": "Flag que habilita a vizualização sem bordas verticais."
                },
                "style_inner": {
                    "type": "object",
                    "default": {},
                    "description": " Dicionário com vários dicionários usados para 'estilizar' o interior do componente."
                }
            }
        },
        "dropdown": {
            "$id": "#/definitions/dropdown",
            "type": "object",
            "required": [
                "id",
                "options"
            ],
            "default": {
                "type": "dropdown",
                "id": "",
                "className_inner": "dropdown_style",
                "text": "",
                "options": [
                    {
                        "<label>": "<value>"
                    }
                ],
                "value": "None",
                "clearable": "True",
                "persistence": "True",
                "persistence_type": "session",
                "multi": "False",
                "placeholder": ""
            },
            "properties": {
                "className_inner": {
                    "$ref": "#/definitions/className"
                },
                "type": {
                    "$ref": "#/definitions/type"
                },
                "id": {
                    "$ref": "#/definitions/id"
                },
                "text": {
                    "description": "Mensagem incluída junto ao componente.",
                    "type": "string",
                    "default": ""
                },
                "options": {
                    "type": "array",
                    "description": "Opções que aparecem no componente.",
                    "default": [
                        {
                            "label": "value"
                        }
                    ],
                    "minItems": 1,
                    "items": [
                        {
                            "type": "object",
                            "properties": {
                                "label": {
                                    "type": "string",
                                    "default": "value",
                                    "description": "Nome que aparece no componente"
                                }
                            }
                        }
                    ]
                },
                "value": {
                    "type": "string",
                    "description": "Opção inicial do componente.",
                    "default": "None"
                },
                "clearable": {
                    "type": "string",
                    "default": "True"
                },
                "persistence": {
                    "type": "string",
                    "default": "True"
                },
                "persistence_type": {
                    "type": "string",
                    "default": "session",
                    "description": "memory: ao recarregar a página, a informação é perdida da memória do app.\nlocal: os dados são mantidos em window.localStorage quando o navegador é fechado.\nsession: os dados são mantidos em window.localStorage até o navegador ser fechado.",
                    "enum": [
                        "memory",
                        "local",
                        "session"
                    ]
                },
                "multi": {
                    "type": "string",
                    "default": "False",
                    "description": "Flag que define se a dropdown permite mais de uma opção selecionada."
                },
                "placeholder": {
                    "type": "string",
                    "description": "Mensagem incluída dentro do componente quando nenhuma opção foi escolhida.",
                    "default": ""
                }
            }
        },
        "exploratory": {
            "$id": "#/definitions/exploratory",
            "type": "object",
            "default": {
                "type": "exploratory",
                "id": "",
                "className": ""
            },
            "properties": {
                "className": {
                    "$ref": "#/definitions/className"
                },
                "type": {
                    "$ref": "#/definitions/type"
                },
                "id": {
                    "$ref": "#/definitions/id"
                }
            }
        },
        "graph": {
            "$id": "#/definitions/graph",
            "type": "object",
            "description": "Cria a div com um graph a partir de um dicionário de parâmetros.",
            "required": [
                "file_path",
                "id",
                "data"
            ],
            "default": {
                "type": "graph",
                "id": "",
                "text": "",
                "file_path": "<path>",
                "encoding": "utf-8",
                "usecols": "todas",
                "index_col": "None",
                "filter": [],
                "layout": {}
            },
            "properties": {
                "type": {
                    "$ref": "#/definitions/type"
                },
                "id": {
                    "$ref": "#/definitions/id"
                },
                "text": {
                    "type": "string",
                    "default": "",
                    "description": "Texto que aparece acima do gráfico."
                },
                "file_path": {
                    "type": "string",
                    "description": "Caminho do arquivo (csv)",
                    "default": "<path>"
                },
                "encoding": {
                    "type": "string",
                    "default": "utf-8",
                    "description": "Encoding utilizado para ler 'file_path'."
                },
                "usecols": {
                    "description": "Lista de nomes de colunas a serem lidas.",
                    "oneOf": [
                        {},
                        {}
                    ]
                },
                "index_col": {
                    "type": "string",
                    "default": "None",
                    "description": "Nome da coluna que deve ser adotada como index."
                },
                "filter": {
                    "type": "string",
                    "default": "",
                    "description": "Uma query que permite filtrar os dados."
                },
                "data": {
                    "type": "array",
                    "description": "Lista com dicionários conforme definidos pelo plotly, mas incluímos a possibilidade do usuário informar nomes das colunas x e y nos camposcol_x e col_y. Precisa fornecer (x e y) ou (col_x e col_y), caso contrário é gerada uma exceção.",
                    "items": {
                        "type": "object"
                    }
                },
                "layout": {
                    "type": "object",
                    "default": {},
                    "description": "Dicionário conforme definido pelo plotly."
                }
            }
        },
        "img": {
            "$id": "#/definitions/img",
            "type": "object",
            "default": {
                "type": "img",
                "id": "",
                "className_inner": "img_style",
                "text": "",
                "file_path": "<path>",
                "alt": ""
            },
            "properties": {
                "className": {
                    "$ref": "#/definitions/className"
                },
                "type": {
                    "$ref": "#/definitions/type"
                },
                "id": {
                    "$ref": "#/definitions/id"
                },
                "className_inner": {
                    "type": "string",
                    "default": "img_style",
                    "description": "Classe css usada no componentee."
                },
                "text": {
                    "type": "string",
                    "default": "",
                    "description": "Texto que aparece acima da imagem."
                },
                "file_path": {
                    "type": "string",
                    "description": "Caminho para o arquivo da imagem.",
                    "default": "<path>"
                },
                "alt": {
                    "type": "string",
                    "default": "",
                    "description": "Texto descritivo do conteúdo da imagem. Serve para dar acessibilidade e facilitar webscrapping."
                }
            }
        },
        "map": {
            "$id": "#/definitions/map",
            "type": "object",
            "default": {
                "type": "map",
                "id": "",
                "className_inner": "map_style",
                "title": "",
                "base": {},
                "layers": {}
            },
            "required": [
                "id"
            ],
            "properties": {
                "className_inner": {
                    "$ref": "#/definitions/className"
                },
                "type": {
                    "$ref": "#/definitions/type"
                },
                "id": {
                    "$ref": "#/definitions/id"
                },
                "title": {
                    "type": "string",
                    "default": "",
                    "description": "Se for fornecido, é incluído como título no topo da div."
                },
                "base": {
                    "type": "object",
                    "default": {},
                    "description": "Parâmetros necessários para desenhar o mapa base. Ver create_map_base."
                },
                "layers": {
                    "type": "object",
                    "default": {},
                    "description": "Parâmetros necessários para desenhar camadas sobre o mapa base. Ver create_data_layers."
                }
            }
        },
        "markdown": {
            "$id": "#/definitions/markdown",
            "type": "object",
            "default": {
                "type": "markdown",
                "id": "",
                "className_inner": "",
                "text": ""
            },
            "required": [
                "text",
                "id"
            ],
            "properties": {
                "className": {
                    "$ref": "#/definitions/className"
                },
                "type": {
                    "$ref": "#/definitions/type"
                },
                "id": {
                    "$ref": "#/definitions/id"
                },
                "className_inner": {
                    "type": "string",
                    "default": "markdown_style",
                    "description": "Classe css usada no componente."
                },
                "text": {
                    "type": "string",
                    "default": "Texto incluído na div."
                }
            }
        },
        "upload": {
            "$id": "#/definitions/upload",
            "type": "object",
            "default": {
                "type": "upload",
                "id": "",
                "className_inner": "upload_style",
                "text": "Informe o arquivo...",
                "multiple": "False"
            },
            "properties": {
                "className_inner": {
                    "$ref": "#/definitions/className"
                },
                "type": {
                    "$ref": "#/definitions/type"
                },
                "id": {
                    "$ref": "#/definitions/id"
                },
                "text": {
                    "type": "string",
                    "default": "Informe o arquivo...",
                    "description": "Mensagem incluída junto ao componente."
                },
                "multiple": {
                    "type": "string",
                    "default": "False",
                    "description": "Flag que controla se o componente recebe múltiplos arquivos."
                }
            }
        },
        "dashboard_links": {
            "$id": "#/definitions/dashboard_links",
            "type": "object",
            "required": [
                "id"
            ],
            "default": {
                "type": "dashboard_links",
                "id": "",
                "className_inner": "dashboard_links_style",
                "link_type": "links",
                "dashboards": [
                    {
                        "name": "",
                        "fancy_name": "",
                        "filename": "",
                        "keys": [],
                        "enable": "yes"
                    }
                ]
            },
            "properties": {
                "className_inner": {
                    "$ref": "#/definitions/className"
                },
                "type": {
                    "$ref": "#/definitions/type"
                },
                "id": {
                    "$ref": "#/definitions/id"
                },
                "link_type": {
                    "type": "string",
                    "default": "links",
                    "description": "Opção pelo tipo de direcionamento: links ou buttons."
                },
                "dashboards": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Nome da dashboard, o qual é usado para identificá-la dentro do programa e também para roteamento"
                            },
                            "fancy_name": {
                                "type": "string",
                                "description": "Nome bonito ou elegante, usado para criar links ou botões para a dashboard"
                            },
                            "filename": {
                                "type": "string",
                                "description": "Caminho até o arquivo json ou py em que está o layout e callbacks;"
                            },
                            "keys": {
                                "description": "Lista com duas palavras chave usadas na organização das dashboards em 2 níveis"
                            },
                            "enable": {
                                "description": "Se enable é diferente de  , o dashboard é ignorado e para todos os efeitos é como se ele não existisse no arquivo de entrada."
                            }
                        }
                    }
                }
            }
        },
        "products": {
            "$id": "#/definitions/products",
            "type": "object",
            "default": {
                "type": "products",
                "id": "",
                "className": ""
            },
            "properties": {
                "className": {
                    "$ref": "#/definitions/className"
                },
                "type": {
                    "$ref": "#/definitions/type"
                },
                "id": {
                    "$ref": "#/definitions/id"
                }
            }
        },
        "className": {
            "$id": "#/definitions/className",
            "type": "string",
            "description": "Classe CSS utilizada"
        },
        "type": {
            "$id": "#/definitions/type",
            "type": "string",
            "default": "data_table"
        },
        "id": {
            "$id": "#/definitions/id",
            "type": "string"
        },
        "row": {
            "$id": "#/definitions/row",
            "type": "object",
            "required": [
                "columns"
            ],
            "default": {
                "className": "",
                "columns": []
            },
            "properties": {
                "columns": {
                    "$ref": "#/definitions/columns"
                }
            }
        },
        "rows": {
            "$id": "#/definitions/rows",
            "type": "array",
            "description": "Cada item é disposto como uma nova linha",
            "items": {
                "$ref": "#/definitions/row"
            }
        },
        "columns": {
            "$id": "#/definitions/columns",
            "type": "array",
            "description": "Cada item é disposto como uma nova coluna",
            "items": {
                "anyOf": [
                    {
                        "$ref": "#/definitions/data_table"
                    },
                    {
                        "$ref": "#/definitions/dropdown"
                    },
                    {
                        "$ref": "#/definitions/exploratory"
                    },
                    {
                        "$ref": "#/definitions/graph"
                    },
                    {
                        "$ref": "#/definitions/img"
                    },
                    {
                        "$ref": "#/definitions/map"
                    },
                    {
                        "$ref": "#/definitions/markdown"
                    },
                    {
                        "$ref": "#/definitions/products"
                    },
                    {
                        "$ref": "#/definitions/upload"
                    },
                    {
                        "$ref": "#/definitions/dashboard_links"
                    }
                ]
            }
        }
    },
    "properties": {
        "layout": {
            "$id": "#/properties/layout",
            "type": "object",
            "title": "The layout schema",
            "required": [
                "rows"
            ],
            "default": {
                "rows": []
            },
            "properties": {
                "className": {
                    "$ref": "#/definitions/className"
                },
                "callback": {
                    "type": "object",
                    "default": {
                        "name_module": "",
                        "file_path": ""
                    },
                    "required": [
                        "name_module",
                        "file_path"
                    ],
                    "properties": {
                        "name_module": {
                            "type": "string",
                            "default": ""
                        },
                        "file_path": {
                            "type": "string",
                            "default": ""
                        }
                    }
                },
                "rows": {
                    "$ref": "#/definitions/rows"
                }
            }
        },
        "additionalProperties": true
    }
}